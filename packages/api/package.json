{
	"name": "@appstandard/api",
	"version": "0.1.0",
	"description": "Calendar tRPC API routers and procedures",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist *.tsbuildinfo",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:integration": "vitest run --config vitest.integration.config.ts",
		"test:integration:watch": "vitest --config vitest.integration.config.ts"
	},
	"devDependencies": {
		"tsdown": "catalog:",
		"@appstandard/config": "workspace:*",
		"vitest": "catalog:",
		"@vitest/coverage-v8": "catalog:"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@appstandard/api-core": "workspace:*",
		"@appstandard/auth": "workspace:*",
		"@appstandard/core": "workspace:*",
		"@appstandard/db": "workspace:*",
		"@appstandard/schemas": "workspace:*",
		"@prisma/client": "catalog:",
		"@trpc/client": "catalog:",
		"@trpc/server": "catalog:",
		"@types/node": "^25.0.3",
		"date-fns": "^4.1.0",
		"dotenv": "catalog:",
		"hono": "catalog:",
		"ical.js": "catalog:",
		"zod": "catalog:"
	},
	"license": "AGPL-3.0"
}
