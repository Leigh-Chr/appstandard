{
	"name": "@appstandard/auth",
	"version": "0.1.0",
	"description": "Unified authentication with Better-Auth for all AppStandard products",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist *.tsbuildinfo",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"tsdown": "catalog:",
		"@appstandard/config": "workspace:*",
		"vitest": "catalog:"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@appstandard/db": "workspace:*",
		"better-auth": "catalog:",
		"better-auth-harmony": "^1.2.5",
		"dotenv": "catalog:",
		"resend": "^6.6.0",
		"zod": "catalog:"
	},
	"license": "AGPL-3.0"
}
