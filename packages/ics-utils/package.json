{
	"name": "@appstandard/ics-utils",
	"version": "0.1.0",
	"description": "Pure ICS/iCalendar utilities for parsing and generating calendar files (RFC 5545)",
	"type": "module",
	"main": "./src/index.ts",
	"module": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./date": {
			"types": "./src/date/index.ts",
			"default": "./src/date/index.ts"
		},
		"./duration": {
			"types": "./src/duration/index.ts",
			"default": "./src/duration/index.ts"
		},
		"./alarm": {
			"types": "./src/alarm/index.ts",
			"default": "./src/alarm/index.ts"
		},
		"./parser": {
			"types": "./src/parser/index.ts",
			"default": "./src/parser/index.ts"
		},
		"./generator": {
			"types": "./src/generator/index.ts",
			"default": "./src/generator/index.ts"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run --passWithNoTests",
		"test:watch": "vitest",
		"clean": "rm -rf dist *.tsbuildinfo"
	},
	"keywords": [
		"ics",
		"icalendar",
		"calendar",
		"rfc5545",
		"vevent",
		"valarm",
		"parser",
		"generator"
	],
	"author": "",
	"license": "AGPL-3.0",
	"dependencies": {
		"ical.js": "catalog:"
	},
	"devDependencies": {
		"@appstandard/config": "workspace:*",
		"tsdown": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"peerDependencies": {},
	"publishConfig": {
		"access": "public"
	}
}
