{
	"name": "@leigh-chr/ics-utils",
	"version": "0.1.0",
	"description": "TypeScript utilities for parsing and generating ICS/iCalendar files (RFC 5545)",
	"type": "module",
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.mjs"
		},
		"./date": {
			"types": "./dist/date/index.d.mts",
			"import": "./dist/date/index.mjs"
		},
		"./duration": {
			"types": "./dist/duration/index.d.mts",
			"import": "./dist/duration/index.mjs"
		},
		"./alarm": {
			"types": "./dist/alarm/index.d.mts",
			"import": "./dist/alarm/index.mjs"
		},
		"./parser": {
			"types": "./dist/parser/index.d.mts",
			"import": "./dist/parser/index.mjs"
		},
		"./generator": {
			"types": "./dist/generator/index.d.mts",
			"import": "./dist/generator/index.mjs"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rm -rf dist *.tsbuildinfo",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"ics",
		"icalendar",
		"calendar",
		"rfc5545",
		"vevent",
		"valarm",
		"rrule",
		"parser",
		"generator",
		"typescript"
	],
	"author": "Leigh CHAREYRE",
	"license": "AGPL-3.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Leigh-Chr/appstandard.git",
		"directory": "packages/ics-utils"
	},
	"homepage": "https://github.com/Leigh-Chr/appstandard/tree/master/packages/ics-utils#readme",
	"bugs": {
		"url": "https://github.com/Leigh-Chr/appstandard/issues"
	},
	"dependencies": {
		"ical.js": "^2.2.1"
	},
	"devDependencies": {
		"@appstandard/config": "workspace:*",
		"tsdown": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18"
	}
}
