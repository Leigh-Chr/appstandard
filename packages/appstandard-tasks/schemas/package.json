{
	"name": "@appstandard-tasks/schemas",
	"version": "0.1.0",
	"description": "Zod validation schemas for tasks and todo items",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"default": "./src/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.mts",
			"default": "./src/*.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist *.tsbuildinfo",
		"test": "vitest run --passWithNoTests"
	},
	"devDependencies": {
		"tsdown": "catalog:",
		"vitest": "catalog:",
		"@appstandard/config": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"zod": "catalog:"
	},
	"license": "AGPL-3.0"
}
