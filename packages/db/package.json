{
	"name": "@appstandard/db",
	"version": "0.1.0",
	"description": "Prisma database client and schema for PostgreSQL",
	"type": "module",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./*": {
			"types": "./src/*.ts",
			"default": "./src/*.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"typecheck": "echo 'Skipping typecheck for @appstandard/db (Prisma generated files)'",
		"clean": "rm -rf dist *.tsbuildinfo",
		"db:push": "prisma db push",
		"db:studio": "prisma studio",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:seed": "bun run prisma/seed.ts"
	},
	"prisma": {
		"seed": "bun run prisma/seed.ts"
	},
	"devDependencies": {
		"@appstandard/config": "workspace:*",
		"prisma": "^7.2.0",
		"tsdown": "catalog:"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@noble/hashes": "^2.0.1",
		"@prisma/adapter-pg": "^7.2.0",
		"@prisma/client": "catalog:",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"license": "AGPL-3.0"
}
