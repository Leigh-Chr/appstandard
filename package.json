{
	"name": "appstandard",
	"private": true,
	"license": "AGPL-3.0",
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*",
			"packages/appstandard-tasks/*",
			"packages/appstandard-contacts/*"
		],
		"catalog": {
			"@tanstack/react-form": "^1.27.7",
			"hono": "^4.11.3",
			"@trpc/server": "^11.8.1",
			"@trpc/client": "^11.8.1",
			"better-auth": "^1.4.10",
			"dotenv": "^17.2.3",
			"zod": "^4.3.5",
			"typescript": "^5.9.3",
			"tsdown": "^0.18.4",
			"@prisma/client": "^7.2.0",
			"date-fns": "^4.1.0",
			"ical.js": "^2.2.1",
			"clsx": "^2.1.1",
			"tailwind-merge": "^3.4.0",
			"ioredis": "^5.9.0",
			"@sentry/bun": "^10.32.1",
			"vitest": "^4.0.16",
			"@vitest/coverage-v8": "^4.0.16"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"check:fix-all": "biome check --write --unsafe .",
		"prepare": "husky",
		"ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
		"dev": "turbo dev",
		"build": "turbo build",
		"test": "turbo test",
		"test:watch": "turbo test --watch",
		"lint": "turbo lint",
		"check-types": "turbo check-types",
		"typecheck": "turbo typecheck",
		"clean": "turbo clean && rm -rf node_modules/.cache .turbo",
		"dev:native": "turbo -F native dev",
		"dev:calendar": "turbo -F calendar-web -F calendar-server dev",
		"dev:calendar-web": "turbo -F calendar-web dev",
		"dev:calendar-server": "turbo -F calendar-server dev",
		"dev:tasks": "turbo -F tasks-web -F tasks-server dev",
		"dev:tasks-web": "turbo -F tasks-web dev",
		"dev:tasks-server": "turbo -F tasks-server dev",
		"dev:contacts": "turbo -F contacts-web -F contacts-server dev",
		"dev:contacts-web": "turbo -F contacts-web dev",
		"dev:contacts-server": "turbo -F contacts-server dev",
		"dev:landing": "turbo -F landing dev",
		"db:push": "turbo -F @appstandard/db db:push",
		"db:studio": "turbo -F @appstandard/db db:studio",
		"db:generate": "turbo -F @appstandard/db db:generate",
		"db:migrate": "turbo -F @appstandard/db db:migrate",
		"db:seed": "turbo -F @appstandard/db db:seed",
		"security:audit": "bun audit",
		"security:audit:fix": "bun audit --fix || true",
		"security:all": "bun run security:audit"
	},
	"dependencies": {
		"dotenv": "^17.2.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "^1.3.5",
		"@types/ioredis": "^5.0.0",
		"bun-osv-scanner": "^2.0.0",
		"husky": "^9.1.7",
		"knip": "^5.80.0",
		"lint-staged": "^16.2.7",
		"turbo": "^2.7.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.5",
	"overrides": {
		"glob": "^10.5.0",
		"react": "19.2.3",
		"react-dom": "19.2.3"
	}
}
