# Database connection
DATABASE_URL="postgresql://user:password@localhost:5432/database"

# Server port (default: 3000)
PORT=3000

# Frontend URL for CORS (REQUIRED - must match calendar-web port)
# calendar-web runs on port 3001
CORS_ORIGIN=http://localhost:3001

# Authentication (required)
BETTER_AUTH_SECRET=your-secret-here-min-32-chars
BETTER_AUTH_URL=http://localhost:3000

# Redis for rate limiting (optional)
# REDIS_URL=redis://localhost:6379

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://...@sentry.io/...

# Email configuration (optional - choose one)
# Option 1: Resend
# RESEND_API_KEY=re_...
# EMAIL_FROM=AppStandard <noreply@appstandard.com>

# Option 2: SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=username
# SMTP_PASSWORD=password
# EMAIL_FROM=AppStandard <noreply@appstandard.com>

# Polar (payment - optional)
# POLAR_ACCESS_TOKEN=
# POLAR_SUCCESS_URL=
