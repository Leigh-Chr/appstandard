{
	"extends": "@appstandard/config/tsconfig.base.json",
	"compilerOptions": {
		// Override for web app
		"lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
		"types": ["vite/client", "vite-plugin-pwa/client"],
		"jsx": "react-jsx",
		"baseUrl": ".",
		"rootDirs": ["."],
		"paths": {
			"@/*": ["./src/*"]
		},
		// Disable declaration for app
		"declaration": false,
		"declarationMap": false,
		"composite": false,
		// Allow unused locals (UI package has unused exports for public API)
		"noUnusedLocals": false
	},
	"include": ["src/**/*", "vite.config.ts", "vitest.config.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
